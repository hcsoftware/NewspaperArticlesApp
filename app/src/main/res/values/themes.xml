<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TheGuardianNews" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_main_dark</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/blue_main_dark</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Main activity styles -->
    <style name="mainActivityStyleImage">
        <item name="android:layout_margin">15dp</item>
        <item name="android:paddingTop">5dp</item>
    </style>
    <!-- Item List styles -->
    <style name="itemListStyleTitle">
        <item name="android:background">@color/blue_main_light</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">15dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="itemListStyleDate">
        <item name="android:background">@color/blue_main_light</item>
        <item name="android:gravity">right</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!-- Local News Fragment styles -->
    <style name="localNewsFragmentTitle">
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">@color/blue_main_dark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">17sp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="localNewsFragmentNoBooks">
        <item name="android:textColor">@color/blue_main_dark</item>
        <item name="android:padding">15dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
    </style>
    <!-- Search News Fragment styles -->
    <style name="newsSearchFragmentTitle">
        <item name="android:textColor">@color/blue_main_dark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">17sp</item>
        <item name="android:gravity">center</item>
    </style>

</resources>